<div class="flex flex-col items-center min-h-screen">
  <h2 class="text-4xl font-semibold text-center">
    Edit Profile
  </h2>
  <%= form_with model: @user, url: user_path, method: :put do |form| %>
    <div class="mt-16">
      <%= form.label :membership %>: 
      <%= form.select :membership, User.memberships.keys.map { |membership| [membership.humanize, membership] }%>
          <%= form.submit 'Update',
      class: "text-white bg-blue-700 font-medium text-sm px-12 py-2 text-center ml-8 cursor-pointer hover:bg-blue-500"
    %>
    </div>
<% end %>
</div>
