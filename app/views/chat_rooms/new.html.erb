<div class="flex flex-col items-center h-screen">
  <h1 class="text-5xl font-bold">
    New Chat Room
  </h1>
  <div class="mt-16">
    <%= form_with model: @chat_room do |form| %>
    <%= form.label :name, class: "font-medium text-lg" %>: 
    <%= form.text_field :name %>
    <%= form.submit 'Create Room',
      class: "text-white bg-blue-700 font-medium text-sm px-12 py-2 text-center ml-8 cursor-pointer hover:bg-blue-500" %>
    <% end %>
  </div>
</div>
